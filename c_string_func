	#include <sys/stat.h>

	man 2 stat

strrchr
-------
	char * file_type(char *f)
	/* returns 'extension' of file */
	{
	        char    *cp;
	        if ( (cp = strrchr(f, '.' )) != NULL )
	                return cp+1;
	        return "";
	}
	
	ends_in_cgi(char *f)
	{
	        return ( strcmp( file_type(f), "cgi" ) == 0 );
	}

